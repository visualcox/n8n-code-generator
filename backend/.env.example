# Application
APP_NAME="n8n JSON Code Generator"
APP_VERSION="1.0.0"
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./n8n_generator.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname

# LLM Configuration
# 사용할 LLM 제공자 선택: openai, gemini, anthropic, ollama
DEFAULT_LLM_PROVIDER=openai

# OpenAI API (GPT-4, GPT-3.5 등)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local LLM (Ollama) - 무료, 로컬 실행
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Learning System
LEARNING_ENABLED=True
LEARNING_SCHEDULE_CRON=0 0 * * 0  # Every Sunday at midnight
N8N_DOCS_URL=https://docs.n8n.io
N8N_TEMPLATES_URL=https://n8n.io/workflows

# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_SEARCH_QUERY=n8n workflow
GITHUB_MIN_STARS=10

# CORS - Frontend URL (for production deployment)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
